{
	"name": "Next.js Template Dev Container",
	"customizations": {
		"vscode": {
			"extensions": ["esbenp.prettier-vscode", "prisma.prisma", "dbaeumer.vscode-eslint"],
			"settings": {
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"source.fixAll.eslint": "explicit"
				},
				"typescript.preferences.importModuleSpecifier": "relative",
				"emmet.includeLanguages": {
					"typescript": "typescriptreact",
					"javascript": "javascriptreact"
				}
			}
		}
	},
	"forwardPorts": [3000, 5555],
	"portsAttributes": {
		"3000": {
			"label": "Next.js App",
			"onAutoForward": "notify"
		},
		"5555": {
			"label": "Prisma Studio",
			"onAutoForward": "notify"
		}
	},
	"postCreateCommand": "chmod +x scripts/setup-env.sh && scripts/setup-env.sh && pnpm install && pnpm db:setup",
	"postStartCommand": "echo 'Dev container is ready! Run pnpm dev to start the development server.'",
	"remoteEnv": {
		"DATABASE_URL": "file:./dev.db"
	}
}
